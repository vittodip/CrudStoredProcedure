@model List<Usuario>

@{
    ViewData["Title"] = "Home Page";
}


@if(TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}


<div class="container">

    <div class="d-flex justify-content-between align-items-center">
        <h1>Registro de Usuários</h1>
        <a class="btn btn-success" asp-action="Cadastrar" asp-controller="Home">Cadastrar Usuário</a>
    </div>

    <table class="table table-hover">
        <thead class="table table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Sobrenome</th>
                <th scope="col">Email</th>
                <th scope="col">Cargo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            
            @if(Model.Count() > 0)
            {
                foreach(var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Id</td>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Sobrenome</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.Cargo</td>
                        <td>
                            <a class="btn btn-warning" asp-action="Detalhes" asp-controller="Home" asp-route-id="@usuario.Id">Detalhes</a>
                            <a class="btn btn-info" asp-action="Editar" asp-controller="Home" asp-route-id="@usuario.Id">Editar</a>
                            <a class="btn btn-danger" asp-action="Remover" asp-controller="Home" asp-route-id="@usuario.Id">Remover</a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>