@model Usuario

@{
    ViewData["Title"] = "Detalhes Usuários";
}


@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}


<div class="container">
    <h1>Detalhes de Usuários</h1>

        <input type="hidden" asp-for="Id" />

        <div class="mt-3">
            <label class="form-label">Nome:</label>
            <input class="form-control" type="text" asp-for="Nome" disabled />
        </div>

        <div class="mt-3">
            <label class="form-label">Sobrenome:</label>
            <input class="form-control" type="text" asp-for="Sobrenome" disabled />
        </div>

        <div class="mt-3">
            <label class="form-label">Email:</label>
            <input class="form-control" type="email" asp-for="Email" disabled />
        </div>

        <div class="mt-3">
            <label class="form-label">Cargo:</label>
            <input class="form-control" type="text" asp-for="Cargo" disabled />
        </div>

        <div class="d-flex mt-5 g-2">
            <a class="btn btn-info w-100" asp-action="Index">Voltar</a>
        </div>
</div>